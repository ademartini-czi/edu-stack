{
  "name": "blues-stack-template",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build --bundle",
    "dev": "run-p dev:*",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:css": "cross-env NODE_ENV=development npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:server": "cross-env NODE_ENV=development node --inspect --require ./node_modules/dotenv/config ./build/server.js",
    "docker": "docker-compose up -d",
    "generate:css": "tailwindcss -o ./app/styles/tailwind.css",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "prod": "cross-env NODE_ENV=production node ./build/server.js",
    "routes": "remix routes",
    "setup": "prisma generate && prisma migrate deploy && prisma db seed",
    "setup:e2e": "npm run build:server && cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5434/test npx prisma migrate reset --force",
    "start": "npm run dev",
    "test": "vitest",
    "test:e2e": "npm run setup:e2e && cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5434/test npx playwright test",
    "types": "tsc --noEmit",
    "validate": "run-p \"test -- --run\" lint types"
  },
  "prettier": "@chanzuckerberg/prettier-config-edu",
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/postgres-data"
  ],
  "dependencies": {
    "@prisma/client": "^4.7.1",
    "@remix-run/express": "^1.8.0",
    "@remix-run/node": "^1.8.0",
    "@remix-run/react": "^1.8.0",
    "@remix-run/server-runtime": "^1.8.0",
    "bcryptjs": "^2.4.3",
    "clsx": "^1.2.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "isbot": "^3.6.3",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.3.1"
  },
  "devDependencies": {
    "@chanzuckerberg/eslint-config-edu-js": "^1.0.2",
    "@chanzuckerberg/eslint-config-edu-ts": "^1.0.4",
    "@chanzuckerberg/eslint-plugin-edu-react": "^1.1.7",
    "@chanzuckerberg/prettier-config-edu": "^1.0.1",
    "@faker-js/faker": "^7.6.0",
    "@playwright/test": "^1.28.1",
    "@remix-run/dev": "^1.8.0",
    "@remix-run/eslint-config": "^1.8.0",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/eslint": "^8.4.10",
    "@types/express": "^4.17.14",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.11.10",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "@vitejs/plugin-react": "^2.2.0",
    "@vitest/coverage-c8": "^0.25.3",
    "autoprefixer": "^10.4.13",
    "c8": "^7.12.0",
    "cookie": "^0.5.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.15.16",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "happy-dom": "^7.7.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.18",
    "prettier": "^2.8.0",
    "prettier-plugin-tailwindcss": "^0.2.0",
    "prisma": "^4.7.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.2.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.3",
    "vite": "^3.2.2",
    "vite-tsconfig-paths": "^3.5.2",
    "vitest": "^0.25.3"
  },
  "engines": {
    "node": ">=18"
  },
  "prisma": {
    "seed": "ts-node --require tsconfig-paths/register prisma/seed.ts"
  }
}
